{{!-- index verge --}}
<div>
    <h1 class="card z-depth-3 center-align">Read the Latest from 'The Verge'</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align">
        {{#each article}}
        <div class="card-panel">
            <h4>{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Read Article</a>

        </div>

        {{/each}}
    </div>
</div>

{{!-- // body --}}
<div>
    <h4 class="title justify-content-md-center">Read What's Trending on Kotaku Gaming News</h4>
    <div class="row">
      <h5 class="scrape justify-content-md-center">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>
{{!-- // articles --}}
<div id="wrapper">
<div class="row">
  <div class="col-2 md-left">
  <div id="articles"></div>
    {{#each articles}}
    <div class="article">
      <h2>{{title}}</h2>
      {{#unless saved}}
              <button class="btn btn-success save" data-id="{{id}}"> Save Article! </button>
            {{/unless}}
            {{#if saved}}
              <p>This article is saved!</p>
            {{/if}}
            <br>
            <a href={{link}}>Link</a>
            <p>{{summary}}</p>
            {{#each note}}
              <p>Comment: {{body}}</p>
              <button type="button" class="delComment btn btn-warning" data-id="{{id}}">Delete Comment!</button>
            {{/each}}
            <form class="comment" data-id="{{id}}">
              <div class="form-group">
                <label for="note">Make a Note!</label>
                <textarea class="form-control" class="body" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
            </form>
          </div>
        {{/each}}
    </div>
  </div> 
  </div>
